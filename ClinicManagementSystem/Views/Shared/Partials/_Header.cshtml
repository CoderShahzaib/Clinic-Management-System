@using System.Security.Claims
<header class="bg-white shadow-sm">
    <div class="mx-auto flex max-w-6xl items-center justify-between p-4">
        <div class="flex items-center gap-3">
            <!-- Font Awesome Icon -->
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-blue-600 text-xl text-white">
                <i class="fa-solid fa-user-doctor"></i>
            </div>
            <div>
                <h1 class="text-lg font-semibold">Patient Dashboard</h1>
                <p class="text-sm text-gray-500">
                    Welcome, @User.FindFirst("FullName")?.Value
                </p>
            </div>
        </div>
        <form asp-action="Logout" asp-controller="Account" method="post" class="inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="px-4 font-medium text-gray-600 hover:text-red-600">
                Logout
            </button>
        </form>
    </div>
</header>
