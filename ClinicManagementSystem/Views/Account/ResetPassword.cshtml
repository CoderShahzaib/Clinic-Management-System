@model ClinicManagementSystem.Core.DTOs.ResetPasswordDTO

<div class="flex min-h-screen items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 p-4">
    <div class="w-full max-w-md rounded-2xl bg-white p-8 shadow-xl">

        <!-- Icon -->
        <div class="mb-4 flex justify-center">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-2xl text-white">
                <i class="fa-solid fa-key"></i>
            </div>
        </div>

        <h2 class="text-center text-2xl font-bold text-gray-800">Reset Password</h2>
        <p class="mb-6 text-center text-gray-500">
            Enter your new password below
        </p>

        @if (ViewBag.Errors != null)
        {
            <div class="mb-4 rounded-lg bg-red-100 p-3 text-sm text-red-700">
                <ul class="list-disc pl-5">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="mb-4 rounded-lg bg-red-50 px-4 py-2 text-sm text-red-600"></div>

        <form asp-action="ResetPassword" asp-controller="Account" method="post">

            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Token" />

            <div class="relative mb-4">
                <label class="mb-1 block font-medium text-gray-700">New Password</label>
                <input asp-for="NewPassword"
                       type="password"
                       placeholder="********"
                       class="w-full rounded-lg border px-10 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <i class="fa-solid fa-lock absolute top-10 left-3 text-gray-400"></i>
                <span asp-validation-for="NewPassword" class="text-sm text-red-600"></span>
            </div>

            <div class="relative mb-6">
                <label class="mb-1 block font-medium text-gray-700">Confirm Password</label>
                <input asp-for="ConfirmPassword"
                       type="password"
                       placeholder="********"
                       class="w-full rounded-lg border px-10 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <i class="fa-solid fa-lock absolute top-10 left-3 text-gray-400"></i>
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-600"></span>
            </div>

            <button type="submit"
                    class="flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 py-2 font-semibold text-white transition hover:bg-blue-700">
                <i class="fa-solid fa-arrow-right-to-bracket"></i> Reset Password
            </button>

        </form>

        <p class="mt-4 text-center text-sm text-gray-600">
            Go back to
            <a asp-action="Login" class="font-semibold text-blue-600 hover:underline">
                Login
            </a>
        </p>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
