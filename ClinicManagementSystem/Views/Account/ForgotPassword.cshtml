@model ClinicManagementSystem.Core.DTOs.ForgotPasswordDTO

<div class="flex min-h-screen items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100 p-4">
    <div class="w-full max-w-md rounded-2xl bg-white p-8 shadow-xl">

        <!-- Icon -->
        <div class="mb-4 flex justify-center">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-2xl text-white">
                <i class="fa-solid fa-envelope-open-text"></i>
            </div>
        </div>

        <h2 class="text-center text-2xl font-bold text-gray-800">Forgot Password</h2>
        <p class="mb-6 text-center text-gray-500">
            Enter your email to receive a reset link
        </p>

        @if (ViewBag.Message != null)
        {
            <div class="mb-4 rounded-lg bg-green-100 p-3 text-sm text-green-700">
                @ViewBag.Message
            </div>
        }

        @if (ViewBag.Errors != null)
        {
            <div class="mb-4 rounded-lg bg-red-100 p-3 text-sm text-red-700">
                <ul class="list-disc pl-5">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="mb-4 rounded-lg bg-red-50 px-4 py-2 text-sm text-red-600"></div>

        <form asp-action="ForgotPassword" asp-controller="Account" method="post">

            <div class="relative mb-6">
                <label class="mb-1 block font-medium text-gray-700">Email</label>
                <input asp-for="Email"
                       type="email"
                       placeholder="your@email.com"
                       class="w-full rounded-lg border px-10 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <i class="fa-solid fa-envelope absolute top-10 left-3 text-gray-400"></i>
                <span asp-validation-for="Email" class="text-sm text-red-600"></span>
            </div>

            <button type="submit"
                    class="flex w-full items-center justify-center gap-2 rounded-lg bg-blue-600 py-2 font-semibold text-white transition hover:bg-blue-700">
                <i class="fa-solid fa-paper-plane"></i> Send Reset Link
            </button>

        </form>

        <p class="mt-4 text-center text-sm text-gray-600">
            Remembered your password?
            <a asp-action="Login" class="font-semibold text-blue-600 hover:underline">
                Back to Login
            </a>
        </p>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
